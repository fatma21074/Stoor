@model Stoor.Models.Product

<!DOCTYPE html>
<html>
<head>
    <style>
        .page-container {
            position: relative;
            padding-left: 10px;
            padding-right: 200px;
            padding-bottom: 20px;
            padding-top: 2px;
        }

    </style>
</head>


<div class="page-container">
    <h2>Product Details</h2>

    <dl class="row">
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Price:
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Description:
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>

    <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-success">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
